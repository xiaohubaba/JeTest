.bluetooth-equip {
  margin: 30rpx 5%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #000;
  height: 80rpx;
  position: relative;
}
.bluetooth-equip .left {
  flex: 1;
  display: flex;
  align-items: center;
  line-height: 40rpx;
}
.bluetooth-equip .left image {
  width: 80rpx;
  height: 80rpx;
}
.bluetooth-equip .left text {
  font-size: 12px;
  position: absolute;
  left: 80rpx;
  top: 35rpx;

}
.bluetooth-btn {
  background: #fff !important;
  border: 1px solid #000;
  border-bottom: none;
  font-size: 12px;
  border-radius: 0;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.isconnect {
  padding: 20rpx 0;
  text-align: center;
  margin-top: 30rpx;
  display: inline-block;
  width: 46%;
  margin: 0 5%;
}
.isconnect .image {
  width: 150rpx;
  height: 150rpx;
}
.bluetooth {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -10rpx;
}
.bluetooth image {
  width: 45rpx;
  height: 45rpx;
}
.bluetooth text {
  margin-left: 10rpx;
  font-size: 12px;
}
.last-text {
  display: block;
  font-size: 14px;
  width: 200rpx;
}