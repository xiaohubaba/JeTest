.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #000;
}
.header view{
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
}
.selected {
    border-bottom: 4px solid blue;
}
.block {
    padding: 20rpx;
    border-bottom: 1px solid #000;
}
.first {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.first .left {
    flex: 1;
}
.first .left text:first-child {
    font-weight: 600;
    font-size: 15px;
}
.first .left text:last-child {
    font-size: 12px;
    margin-left: 40rpx;
}
.first .right {
   width: 80rpx;
   height: 68rpx;
}
.right1 {
    width: 80rpx;
    height: 80rpx;
}
.second {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 80%;
    margin-top: 20rpx;
}
.second .left {
    flex: 1;
    font-size: 12px;
}
.second .left text {
    display: block;
    margin: 10rpx 0;
}
.second .right {
    flex: 1;
    font-size: 12px;
    margin-left: 30rpx;
}
.second .right text {
    display: block;
    margin: 10rpx 0;
}
.third {
    font-size: 10px;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}