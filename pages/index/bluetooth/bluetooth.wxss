.bluetooth {
    width: 100%;
    text-align: center;
}
.bluetooth text {
    display: block;
    margin: 0 0 20rpx;
}
.bluetooth image {
    width: 120rpx;
    height: 120rpx;
}
.bluetooth .tip {
    font-size: 12px;
    color: dodgerblue;
}
.isfound {
    margin-top: 0;
}
.text {
    display: block;
    font-size: 16px;
}
.list {
    padding: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid #000;
}
.list:last-child {
    border-bottom: 1px solid #000;
}
.list .left {
    flex: 1;
    display: flex;
    align-items: center;
}
.list .left image {
    width: 80rpx;
    height: 80rpx;
}
.list .left .left-block {
    margin-left: 30rpx;
    text-align: left;
}
.list .left text {
    display: block;
    color: #000;
    font-size: 14px;
}
.block {
    width: 100%;
    height: 140rpx;
    background: #fff;
}