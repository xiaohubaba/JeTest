.wrap {
    margin: 100rpx auto;
    text-align: center;
    width: 100%;
    background: #fff;
}
.wrap text {
    display: block;
}
.wrap .text:first-child {
    font-size: 16px;
    font-weight: 600;
    margin-top: 60rpx;
}
.wrap .text:nth-child(2) {
    font-size: 12px;
    font-weight: 600;
    margin: 60rpx 0;
}
.wrap .text:nth-child(3) {
    font-size: 12px;
    margin: 0 0 60rpx 0;
}
.wrap .image1 {
    width: 240rpx;
    height: 240rpx;
}
.time {
    margin: 60rpx 0;
}
.time text {
    display: inline-block;
    font-size: 14px;
}
.bg {
    padding: 25rpx 50rpx;
    background: #333;
    color: #fff;
    font-size: 14px;
    margin: 0 20rpx;
}
.imagelist {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 90%;
    margin: 40rpx 5%;
}
.imagelist view {
    width: 90%;
    margin: 0 5%;
    text-align: center;
    font-size: 12px;
}
.imagelist view image {
   width: 100%;
   height: 200rpx;
}
.imagelist view text {
    display: block;
    margin-top: 20rpx;
    height: 100%;
}
