.lastimg {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin: 10rpx 2%;
}
.lastimg image {
    width: 100%;
    height: 160rpx;
    margin:  0 2%;
}
.lastimg text {
    width: 100%;
    margin: 0 2%;
    font-size: 12px;
}
.btn {
    width: 300rpx;
    margin-top: 50rpx;
}
.result .fail {
    font-size: 17px;
    font-weight: 600;
    color: #000;
}
.result .failimg {
    width: 250rpx;
    height: 250rpx;
    margin: 60rpx 0;
}
.reason {
    font-size: 14px;
    font-weight: normal;
    display: block;
    margin: 30rpx 0 60rpx;
}
.result .input {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin: 0 40rpx 60rpx;
}
.result .input textarea {
    flex: 1;
    height: 260rpx;
    border: 1px solid #000;
    margin-left: 20rpx;
    text-align: left;
}
.result-btn {
    width: 350rpx;
    margin-top: 40rpx;
}
.imglist {
    display: flex;
    margin: 0 20rpx;
    flex-wrap: wrap;
    /* justify-content: space-between; */
    align-items: center;
}
.imglist view {
    flex: 1;
    width: 25%;
    min-width: 25%;
    max-width: 25%;
    height: 200rpx;
    margin: 40rpx 0;
}
.imglist view image {
    width: 100%;
    height: 200rpx;
}