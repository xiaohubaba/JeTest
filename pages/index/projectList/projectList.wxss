.choose-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    border-bottom: 1px solid #000;
}
.choose-list .left {
    flex: 1;
    font-size: 13px;
    color: #838a8d;
}
.choose-list .left text:nth-child(2) {
    margin-left: 25rpx;
}
.choose-list .left text:nth-child(3) {
    margin-left: 35rpx;
}
.choose-list .right {
    flex: 0 0 140rpx;
    width: 140rpx;
    font-size: 12px;
    color: #ff4e74;
}
.list {
    border-bottom: 1px solid #000;
}
.wrapper {
    height: calc(100vh - 180rpx);
}
.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 20rpx 35rpx;
}
.header .button {
    margin: 0;
}
.header .text {
    font-weight: 600;
}
.content {
    width: 90%;
    margin: 5rpx auto 30rpx;
}
