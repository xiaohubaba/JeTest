/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 30rpx;
  box-sizing: border-box;
}
.userinfo {
  border: 1px solid #000;
  position: fixed;
  border-radius: 8px 8px 0 0;
  width: 100%;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 99999;
  transition: .3s;
}
.title {
  font-size: 14px;
  padding: 10px 0 40rpx 20rpx;
  font-weight: 600;
  display: block;
}
.info {
  font-size: 14px;
  padding-left: 20rpx;
  font-weight: 600;
}
.divide-line {
  margin: 25rpx 0;
  border-bottom: 1px solid #000;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.userinfo-nickname1 {
  color: #000;
}
.usermotto {
  margin-top: 100px;
}
.personal-info {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #000;
}
.left {
  flex: 1;
  display: flex;
  align-items: center;
}
.personal-info image {
  width: 60rpx;
  height: 60rpx;
  flex:  0 0 60rpx;
}
.image {
  width: 90rpx;
  height: 90rpx;
}
.right {
  margin-left: 20rpx;
}
.right text {
  display: block;
  font-size: 12px;
  font-weight: 600;
}
.use-other {
  padding:  20rpx;
  font-size: 12px;
  display: block;
}
.bottom-btn {
  display: flex;
  margin: 30rpx 10%;
}
.bottom-btn button {
  flex: 1;
}
.bottom-btn button:last-child {
  margin-left: 10%;
}
.login-way {
  width: 80%;
  text-align: center;
}
.login-way .head-img {
  width: 280rpx;
  height: 220rpx;
  margin-bottom: 40rpx;
}
.login-way view {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #000;
  margin: 40rpx 0;
  height: 100rpx;
  font-weight: 600;
  font-size: 36rpx;
}
.weixin {
  width: 80rpx;
  height: 80rpx;
  margin-right: 6rpx;
}
.notice {
  border: none;
  font-size: 12px;
  font-weight: normal;
  padding: 0 30rpx;
}
.notice text {
  color: #4d9feb;
}
.hide {
  bottom: -600rpx !important;
  transition: .3s;
}
.hide1 {
  bottom: -600rpx !important;
  transition: .3s;
}
.btn {
  display: flex;
  align-items: center;
  background: #fff;
  border: 1px solid #000;
  justify-content: center;
  border-radius: 0;
  font-weight: 600;
  height: 104rpx;
  font-size: 36rpx;
  color: #000;
}
.page {
  width: 100%;
}
.header-swiper {
  width: 100%;
  height: 100%;
}
.header-swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.header-swiper .swiper-item image {
  width: 100%;
  height: auto;
}
.page .logo {
  margin: 10rpx 10% 20rpx;
  width: 80%;
  height: 280rpx;
}
.list {
  margin: 20rpx 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list view {
  flex: 1;
  text-align: center;
}
.list .one text {
  display: block;
}
.list .two text {
  display: block;
}
.list image {
  /* flex: 1; */
  width: 80px;
  height: 75px;
}
 .list image:first-child {
  height: 82px;
}
/* .list image:last-child {
  width: 600rpx;
  height: 210rpx;
} */
.bluetooth-equip {
  margin: 30rpx 5%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #000;
  height: 80rpx;
  position: relative;
}
.bluetooth-equip .left {
  flex: 1;
  display: flex;
  align-items: center;
  line-height: 50rpx;
}
.bluetooth-equip .left image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: 0;
}
.bluetooth-equip .left text {
  font-size: 12px;
  position: absolute;
  left: 65rpx;
  top: 35rpx;

}
.bluetooth-btn {
  background: #fff !important;
  border: 1px solid #000;
  border-bottom: none;
  font-size: 12px;
  border-radius: 0;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.isconnect {
  padding: 20rpx 0;
  text-align: center;
  display: flex;
}
.isconnect .image {
  width: 80rpx;
  height: 80rpx;
}
.bluetooth {
  flex: 1
}
.bluetooth image {
  width: 40rpx;
  height: 40rpx;
}
.bluetooth text {
  display: block;
  margin-left: 20rpx;
  font-size: 14px;
  text-align: left;
}
.second {
  margin-top: 15rpx;
}
.no-equipment {
  text-align: center;
}
.no-equipment text {
  display: block;
}
.no-equipment text:first-child {
  font-size: 18px;
}
.no-equipment text:last-child {
  font-size: 14px;
  margin-top: 20rpx;
}
.no-equipment image {
  width: 100rpx;
  height: 100rpx;
}
.wrapper {
  height: calc(100vh - 800rpx);
  margin: 0 5%;
}
.isconnect .left {
  flex: 1;
  display: flex;
  align-items: center;
}
.isconnect .right-btn {
  flex: 0 0 150rpx;
  width: 150rpx;
}
.img {
  position: absolute;
  top: 22rpx;
  left: 220rpx;
}
.info {
  font-size: 14px;
  display: block;
}
.location {
  display: block;
  font-size: 12px;
  margin-top: 15rpx;
  padding-left: 20rpx;
}
.location-header {
  display: flex;
  align-items: center;
}
.location-header image {
  width: 50rpx;
  height: 53rpx;
}
.location-header text {
  font-size: 13px;
  margin-left: 10rpx;
}
.weui-navigation-bar__inner .weui-navigation-bar__center text{
  font-weight: bold !important;
}